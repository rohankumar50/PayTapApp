<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".OTPVerification"
    android:background="#F3EDED">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OTP Verification"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:textColor="#1A237E"
        android:fontFamily="@font/javat"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/appCompatImageView2"
        android:layout_width="253dp"
        android:layout_height="191dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/letter2"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/background">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Verify Your Mobile Number"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:textSize="18sp"
            android:textColor="#3374BA"
            android:fontFamily="sans-serif-black"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="120dp">

            <EditText
                android:id="@+id/OTP1"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#fff"
                android:inputType="number"
                android:maxLength="1"
                android:gravity="center"
                android:textColor="#fff"/>
            <EditText
                android:id="@+id/OTP2"
                android:layout_width="50dp"
                android:nextFocusDown="@id/OTP1"
                android:layout_height="wrap_content"
                android:backgroundTint="#fff"
                android:inputType="number"
                android:gravity="center"
                android:maxLength="1"
                android:textColor="#fff"/>
            <EditText
                android:id="@+id/OTP3"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#fff"
                android:nextFocusDown="@id/OTP2"
                android:inputType="number"
                android:gravity="center"
                android:maxLength="1"
                android:textColor="#fff"/>

            <EditText
                android:id="@+id/OTP4"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:backgroundTint="#fff"
                android:gravity="center"
                android:nextFocusDown="@id/OTP3"
                android:inputType="number"
                android:maxLength="1"
                android:imeOptions="actionDone"
                android:textColor="#fff" />
            <EditText
                android:id="@+id/OTP5"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:backgroundTint="#fff"
                android:gravity="center"
                android:nextFocusDown="@id/OTP3"
                android:inputType="number"
                android:maxLength="1"
                android:imeOptions="actionDone"
                android:textColor="#fff" />
            <EditText
                android:id="@+id/OTP6"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:backgroundTint="#fff"
                android:gravity="center"
                android:nextFocusDown="@id/OTP3"
                android:inputType="number"
                android:maxLength="1"
                android:imeOptions="actionDone"
                android:textColor="#fff" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_act_otpverfy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Verify"
            android:textColor="#3374BA"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Didn't get OTP ! Resend"
            android:gravity="center"
            android:id="@+id/OTPVERIFY_resend_otp"
            android:layout_marginTop="20dp"
            android:textSize="14sp"
            android:textColor="#fff"/>
    </LinearLayout>

</LinearLayout>